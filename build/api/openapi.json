{
  "openapi": "3.0.3",
  "info": {
    "title": "CLAH Control Plane API",
    "version": "0.1.0",
    "description": "Specifica OpenAPI iniziale per il modulo API del progetto CLAH."
  },
  "paths": {
    "/env": {
      "get": {
        "summary": "Elenca tutti gli ambienti",
        "operationId": "listEnvironments",
        "responses": {
          "200": {
            "description": "Lista ambienti restituita correttamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EnvListResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Aggiunge un nuovo ambiente",
        "operationId": "addEnvironment",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/EnvCreateRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ambiente creato correttamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Environment"
                }
              }
            }
          }
        }
      }
    },
    "/env/{uuid}": {
      "get": {
        "summary": "Mostra il dettaglio di un ambiente",
        "operationId": "showEnvironment",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Dettaglio ambiente restituito correttamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Environment"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Rimuove un ambiente",
        "operationId": "deleteEnvironment",
        "parameters": [
          {
            "name": "uuid",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ambiente rimosso correttamente",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/EnvDeleteResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Environment": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z0-9._-]+$",
            "description": "Identificativo tecnico dell'ambiente (senza spazi; consentiti lettere, numeri, '.', '_' e '-').",
            "example": "production"
          },
          "uuid": {
            "type": "string",
            "format": "uuid",
            "example": "3fa85f64-5717-4562-b3fc-2c963f66afa6"
          },
          "friendly-name": {
            "type": "string",
            "maxLength": 30,
            "description": "Nome leggibile dell'ambiente (massimo 30 caratteri, spazi inclusi).",
            "example": "Production EU"
          },
          "description": {
            "type": "string",
            "maxLength": 1024,
            "description": "Descrizione libera dell'ambiente (massimo 1024 caratteri).",
            "example": "Ambiente di produzione principale per il cluster europeo."
          }
        },
        "required": [
          "name",
          "uuid"
        ]
      },
      "EnvCreateRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[A-Za-z0-9._-]+$",
            "description": "Identificativo tecnico dell'ambiente (senza spazi; consentiti lettere, numeri, '.', '_' e '-').",
            "example": "production"
          },
          "friendly-name": {
            "type": "string",
            "maxLength": 30,
            "description": "Nome leggibile dell'ambiente (massimo 30 caratteri, spazi inclusi).",
            "example": "Production EU"
          },
          "description": {
            "type": "string",
            "maxLength": 1024,
            "description": "Descrizione libera dell'ambiente (massimo 1024 caratteri).",
            "example": "Ambiente di produzione principale per il cluster europeo."
          }
        },
        "required": [
          "name"
        ]
      },
      "EnvListResponse": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer",
            "minimum": 0,
            "example": 2
          },
          "items": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Environment"
            }
          }
        },
        "required": [
          "count",
          "items"
        ]
      },
      "EnvDeleteResponse": {
        "type": "object",
        "properties": {
          "status": {
            "type": "string",
            "example": "ok"
          }
        },
        "required": [
          "status"
        ]
      }
    }
  }
}
